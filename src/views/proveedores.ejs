<%- include ('partials/_header') %>
<div class="container mt-5">
    <!-- Formulario de Agregar Proveedor -->
    <div class="row">
        <div class="col-md-5">
            <h3 class="mb-3">Agregar Proveedor</h3>
            <div class="card">
                <div class="card-body">
                    <form action="agregar" method="post">
                        <div class="form-group">
                            <label for="nomEmpresa">Nombre:</label>
                            <input type="text" name="nomEmpresa" id="nomEmpresa" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="direccion">Dirección:</label>
                            <input type="text" name="direccion" id="direccion" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="ciudad">Ciudad:</label>
                            <input type="text" name="ciudad" id="ciudad" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="estado">Estado:</label>
                            <input type="text" name="estado" id="estado" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="codigoP">Código postal:</label>
                            <input type="text" name="codigoP" id="codigoP" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="correoElec">Correo electrónico:</label>
                            <input type="text" name="correoElec" id="correoElec" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="telefono">Teléfono:</label>
                            <input type="text" name="telefono" id="telefono" class="form-control" required>
                        </div>

                        <!-- <button type="submit" class="btn btn-primary btn-block">Agregar</button> -->
                         <!-- Botón de enviar -->
            <div class="form-section">
                <button type="submit" class="btn btn-primary btn-block" onclick="mostrarAlerta()">Agregar</button>
            </div>
        </form>

        <script>
            function mostrarAlerta() {
                alert("El registro fue exitoso");
            }
        </script>
                    </form>
                </div>
            </div>
        </div>

        <!-- Tabla de Proveedores -->
        <div class="col-md-7">
            <h3 class="mb-3">Lista de proveedores</h3>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>No.</th>
                            <th>Empresa</th>
                            <th>Dirección</th>
                            <th>Ciudad</th>
                            <th>Estado</th>
                            <th>Código postal</th>
                            <th>Correo electrónico</th>
                            <th>Teléfono</th>
                            <th>Acciones</th>
                            <!-- <th>Acciones</th> -->
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data && data.length > 0) { %>
                            <% for (let i = 0; i < data.length; i++) { %>
                                <tr>
                                    <td><%= i + 1 %></td>
                                    <td><%= data[i].nomEmpresa %></td>
                                    <td><%= data[i].direccion %></td>
                                    <td><%= data[i].ciudad %></td>
                                    <td><%= data[i].estado %></td>
                                    <td><%= data[i].codigoP %></td>
                                    <td><%= data[i].correoElec %></td>
                                    <td><%= data[i].telefono %></td>
                                    <td>
                                        <a href="eliminarA/<%= data[i].id %>" class="btn btn-danger btn-sm">Eliminar</a>
                                        <a href="consultarA/<%= data[i].id %>" class="btn btn-primary btn-sm">Modificar</a>
                                    </td>
                                </tr>
                            <% } %>
                        <% } else { %>
                            <tr>
                                <td colspan="9" class="text-center">No hay proveedores disponibles</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<br>

<%- include ('partials/_footer') %>
